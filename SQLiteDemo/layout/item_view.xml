<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="6dp"
    app:cardBackgroundColor="@color/cardview_light_background"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/activity_main"
        tools:context="com.example.myreyclerview.MainActivity"
        android:padding="10dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ivSpot"
            android:src="@drawable/default_image"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvName"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@id/ivSpot"
            android:textColor="#222222"
            android:textSize="16sp"
            tools:text="中正紀念堂"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvPhone"
            android:layout_marginStart="17dp"
            android:layout_toEndOf="@id/tvName"
            android:layout_alignBottom="@id/tvName"
            android:textColor="#884488"
            android:textSize="14sp"
            tools:text="02-1245678"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvAddress"
            android:layout_alignStart="@id/tvName"
            android:layout_below="@id/tvName"
            android:textSize="14sp"
            android:textColor="#448888"
            tools:text="台北市羅斯福路1號"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvWeb"
            android:layout_alignStart="@id/tvName"
            android:layout_below="@id/tvAddress"
            android:textSize="14sp"
            android:textColor="#000044"
            tools:text="www.abc.com.tw"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>